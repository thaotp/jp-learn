<div class="panel">
  <div class="panel-body">
    <div class='' style="margin-bottom: 10px;">
      <% _.each(kanjis, function(kanji, index) { %>
        <ruby style='padding-right: 5px;'>
          <rb style='font-size: 20px;'>
            <a href="#<%= kanji.id %>"><%= kanji.name %></a>
          </rb>
          <rp>/</rp>
          <rt style='font-size: 14px;'><%= kanji.romaji %></rt>
        </ruby>
      <% }) %>
    </div>
    <div class='row'>
      <div class='col-sm-4'>
        <h3>
          <%= kanjis[0].explain %>
        </h3>
      </div>
      <div class='col-sm-8'>
        <div>
          <div class="row">
            <div class='col-sm-9'>
            <p><span>On: </span> <span style='font-weight: bold; color: black;'><%= kanjis[0].onyomi %></span></p>
              <p><span>Kun: </span> <span style='font-weight: bold; color: black;'><%= kanjis[0].kunjomi %></span></p>
              <p>
                Radical: <%= kanjis[0].radical %>  Stroke: <%= kanjis[0].stroke %>  Elements: <%= kanjis[0].elements %>
              </p>
            </div>
            <div class='col-sm-3' style="text-align: right;">
              <img class='js-imagex' src="<%= kanjis[0].image %>" height="100" width="100">
            </div>
          </div>
        </div>
        <div style='width: 100%; height: 300px;' id='simple-board'></div>
      </div>
    </div>
  </div>
</div>