<div class="panel">
  <div class="panel-body">
    <div class='row'>
      <div class="col-sm-4">
        <h1 class="page-title js-name"><%= word.name %></h1>
        <h3 class="page-title js-kanji-note"><%= word.kanji_note %></h3>
      </div>
      <div class="form-group col-sm-4">
        <h4 class="page-title js-mean"><%= word.mean %></h4>
        <input type="text" class="form-control input-lg js-input" style="text-align: center" placeholder="<%= word.name.replace(/～/g, '') %>">
      </div>
      <div class="col-sm-4">

        <div class='js-kanji'>
          <%= word.name_jp.replace(/～/g, '') %>
        </div>
        <h2 class="page-title js-romanji"><%= word.romanji.replace(/～/g, '') %></h2>
        <h4 class="page-title js-times" style="
          height: 50px;
          width: 50px;
          border-radius: 50%;
          border: 1px solid;
          text-align: center;
          padding: 13px;">
            <%= word.times || 0 %>
        </h4>
      </div>
      <div class="form-group col-sm-12">
        <button type="button" class="btn btn-primary"> Back </button>
      </div>
    </div>
  </div>
</div>