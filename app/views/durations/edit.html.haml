.container
  .page
    .page-content
      .duration-group
      .row
        .col-sm-6
          .form-group
            %label.control-label{:for => ""} Total
            %input.form-control{:autocomplete => "off", :id => "jsTotalAudio", :name => "", :type => "text", value: eval(@duration.durations).join(',')}/
        .col-sm-6
          .form-group.col-sm-4
            %label.control-label Option
            %div
              .radio-custom.radio-default.radio-inline
                %input#jsOptionI.jsOption{:name => "option", value: 0, :type => "radio"}/
                %label{:for => "jsOptionI"} Option I
              .radio-custom.radio-default.radio-inline
                %input#jsOptionII.jsOption{:checked => "checked", :name => "option",value: 1, :type => "radio"}/
                %label{:for => "jsOptionII"} Option II
            %div
              .radio-custom.radio-default.radio-inline
                %input#jsFinshOn.jsFinishEnd{:checked => "checked", :name => "end", :type => "radio", value: 'true'}/
                %label{:for => "jsFinshOn"} On
              .radio-custom.radio-default.radio-inline
                %input#jsFinshOff.jsFinishEnd{:name => "end", :type => "radio", value: 'false'}/
                %label{:for => "jsFinshOff"} Off
          .form-group.col-sm-8
            %label.control-label{:for => ""} &nbsp
            %button.btn.btn-primary#jsProgress.jsProgressA{:type => "button", :style=>"margin-top: 25px"} Progress
            %label.control-label{:for => ""} &nbsp
            %button.btn.btn-primary#jsReset{:type => "button", :style=>"margin-top: 25px"} Reset
            %label.control-label{:for => ""} &nbsp
            %button.btn.btn-primary#jsUp{:type => "button", :style=>"margin-top: 25px"} Up
            %label.control-label{:for => ""} &nbsp
            %button.btn.btn-primary#jsAdd{:type => "button", :style=>"margin-top: 25px"} Add
